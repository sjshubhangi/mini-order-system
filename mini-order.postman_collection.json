{
  "info": {
    "name": "Mini Order & Catalogue Management System",
    "_postman_id": "b3c1f0b8-0000-4444-8888-collection",
    "description": "Passport, RBAC, S3, Redis caching, queues, logging, rate limiting.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Users",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{ \"name\": \"Admin1\", \"email\": \"admin1@test.com\", \"password\": \"secret123\", \"role\": \"admin\" }" },
            "url": { "raw": "{{base_url}}/register", "host": ["{{base_url}}"], "path": ["register"] }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{ \"email\": \"admin1@test.com\", \"password\": \"secret123\" }" },
            "url": { "raw": "{{base_url}}/login", "host": ["{{base_url}}"], "path": ["login"] }
          }
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/me", "host": ["{{base_url}}"], "path": ["me"] }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List products",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/products", "host": ["{{base_url}}"], "path": ["products"] }
          }
        },
        {
          "name": "Popular products (cached)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/products/popular", "host": ["{{base_url}}"], "path": ["products","popular"] }
          }
        },
        {
          "name": "Get product",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{base_url}}/products/1?includeSigned=true",
              "host": ["{{base_url}}"],
              "path": ["products","1"],
              "query": [{ "key": "includeSigned", "value": "true" }]
            }
          }
        },
        {
          "name": "Product image signed URL",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/products/1/image-url", "host": ["{{base_url}}"], "path": ["products","1","image-url"] }
          }
        },
        {
          "name": "Create product (Vendor/Admin)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "name", "value": "Laptop", "type": "text" },
                { "key": "description", "value": "High performance", "type": "text" },
                { "key": "price", "value": "1200.00", "type": "text" },
                { "key": "stock", "value": "10", "type": "text" },
                { "key": "image", "type": "file", "src": "laptop.jpg" }
              ]
            },
            "url": { "raw": "{{base_url}}/products", "host": ["{{base_url}}"], "path": ["products"] }
          }
        },
        {
          "name": "Update product (Vendor/Admin)",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": { "mode": "raw", "raw": "{ \"price\": 1299.00 }" },
            "url": { "raw": "{{base_url}}/products/1", "host": ["{{base_url}}"], "path": ["products","1"] }
          }
        },
        {
          "name": "Delete product (Vendor/Admin)",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/products/1", "host": ["{{base_url}}"], "path": ["products","1"] }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create order (Customer)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{ \"product_id\": 1, \"quantity\": 2 }" },
            "url": { "raw": "{{base_url}}/orders", "host": ["{{base_url}}"], "path": ["orders"] }
          }
        },
        {
          "name": "List orders (Vendor/Admin)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/orders", "host": ["{{base_url}}"], "path": ["orders"] }
          }
        },
        {
          "name": "Get order (Vendor/Admin)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/orders/1", "host": ["{{base_url}}"], "path": ["orders","1"] }
          }
        },
        {
          "name": "Update order status (Vendor/Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{ \"status\": \"completed\" }" },
            "url": { "raw": "{{base_url}}/orders/1/status", "host": ["{{base_url}}"], "path": ["orders","1","status"] }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:8000/api" },
    { "key": "token", "value": "" }
  ]
}
